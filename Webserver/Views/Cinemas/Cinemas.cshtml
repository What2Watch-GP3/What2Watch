@model IEnumerable<WebApiClient.DTOs.CinemaDto>



@{
    ViewData["Title"] = "List";
}

<h1>Cinemas found by Movie</h1>


<table class=" table table-hover table-bordered bg-grey text-light ">
    <thead>
        <tr>
           

            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>

        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>

                <td>
                    @Html.ActionLink(item.Name, "Shows", "Shows", new { movieId = TempData["movieId"], cinemaId = item.Id })
                </td>
                
            </tr>
        }
    </tbody>
</table>
