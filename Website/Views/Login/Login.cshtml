@model WebApiClient.DTOs.UserDto
@{
    ViewData["Title"] = "Login";
    var returnUrl = @Context.Request.Query["returnUrl"];
}
    <!--TODO: Implement if statement to check if user is logged in-->
<h1 class="text-not-pornhub">Login</h1>
<hr />
<div>
    <div class="col-md-4">
        <form asp-action="Login" asp-route-returnurl="@returnUrl">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Email" class="control-label white-text"></label>
                <input asp-for="Email" class="form-control" type="email" required />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Password" class="control-label white-text"></label>
                <input asp-for="Password" class="form-control" type="password" required />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Login" class="btn btn-confirm" />
            </div>
        </form>
    </div>
</div>
<div>
    <a class="white-text"asp-controller="Movies" asp-action="">Back to Home</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
