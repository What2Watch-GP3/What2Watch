@model WebApiClient.DTOs.UserDto
@{
    ViewData["Title"] = "Login";
    var returnUrl = @Context.Request.Query["returnUrl"];
}
    <!--TODO: Implement if statement to check if user is logged in-->
<h1 class="text-not-pornhub">Login</h1>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Login" asp-route-returnurl="@returnUrl">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Email" class="control-label text-white" for="email"></label>
                <input asp-for="Email" class="form-control" type="email" id="email" required />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Password" class="control-label text-white"></label>
                <input asp-for="Password" class="form-control" type="password" required />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="form-group form-check-inline d-flex justify-content-between">
                <!-- Checkbox -->
                <div>
                    <input class="form-input" type="checkbox" value="" id="remember" />
                    <label class="form-input text-white" for="remember">
                        Remember me
                    </label>
                </div>
                <a href="#!" class="text-not-pornhub">Forgot password?</a>
            </div>
            <div class="form-group">
                <input type="submit" value="Login" class="btn btn-confirm btn-block">
            </div>
            <div class="form-group d-flex justify-content-between">
                <span class="text-white">
                    Don't have an account? <a href="#!" class="text-not-pornhub">Register here!</a>
                </span>
                
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
