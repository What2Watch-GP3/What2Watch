@model IEnumerable<WebApiClient.DTOs.MovieDto>

@{
    ViewData["Title"] = "Movies";
}


<h1 class="text-dark">All Movies</h1>

<div class="input-group mb-3">
    <form asp-controller="Movies" asp-action="Index" method="get" class="input-group">
        <p>
            <div>
                <input class="form-control" id="search" type="text" name="search" size="40" placeholder="Search for a movie" value=@ViewBag.TextValue>
            </div>
            <!--<input class="btn btn-primary" type="submit" value="Search" />-->
        </p>
    </form>
</div>

<div class="row row-cols-1 row-cols-md-3 g-4">

    @foreach (var item in Model)
    {

    <div class="col-lg-4 col-md-6 col-12">
            <div class="card mb-3 ripple" onclick="location.href='@Url.Action("Cinemas", "Cinemas" , new { movieId=@item.Id })'">
                <div class="row g-0">
                    <div class="col-4">
                        @{string imgSourcePath = $"pics/{@item.Title}.jpg";}
                        <img src="@imgSourcePath"
                             class="card-img-top"
                             style="height: 100%;"
                             alt="@item.Title" />
                    </div>
                    <div class="col-8">
                        <div class="card-body">
                            <h5 class="card-title">@item.Title</h5>
                            <p class="card-text">
                                Duration: @item.Duration minutes
                            </p>
                        </div>
                    </div>
                </div>
            </div>
    </div>
    }
</div>
