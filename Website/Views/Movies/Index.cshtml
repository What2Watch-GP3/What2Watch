@model IEnumerable<WebApiClient.DTOs.MovieDto>

@{
    ViewData["Title"] = "Movies";
}


<h1 class="text-dark">All Movies</h1>

<div class="input-group mb-3">
    <form asp-controller="Movies" asp-action="Index" method="get" class="input-group">
        <p>
            <div>
                <input class="form-control" id="search" type="text" name="search" size="40" placeholder="Search for a movie" value=@ViewBag.TextValue>
            </div>
            <!--<input class="btn btn-primary" type="submit" value="Search" />-->
        </p>
    </form>
</div>

    <table class="table table-hover table-bordered">
        <thead  >
            <tr>

                <th>
                    @Html.DisplayNameFor(model => model.Title)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Duration)
                </th>

            </tr>
        </thead>

        <tbody class="clickable-table">
            @foreach (var item in Model)
            {

                <tr>
                    <td class="table-row text-white">
                        @Html.ActionLink(item.Title, "Cinemas", "Cinemas", new { movieId = item.Id })
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Duration) minutes
                    </td>

                </tr>
            }
        </tbody>
    </table>
